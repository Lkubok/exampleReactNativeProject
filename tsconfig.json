{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ES2019"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "api": ["./api/"],
      "assets": ["./assets/"],
      "components": ["./components/"],
      "contexts": ["./contexts/"],
      "config": ["./config/"],
      "hooks": ["./hooks/"],
      "middlewares": ["./middlewares/"],
      "models": ["./models/"],
      "navigation": ["./navigation/"],
      "styles": ["./styles/"],
      "schemas": ["./schemas/"],
      "screens": ["./navigation/screens/"],
      "store": ["./store/"],
      "translations": ["./translations/"],
      "utils": ["./utils/"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "./src/__mocks__*"]
}
